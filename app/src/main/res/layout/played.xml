<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="14dp"
    android:layout_margin="12dp"
    android:id="@+id/playedCard"
    android:background="@drawable/bg_card_ripple"
    android:stateListAnimator="@animator/card_press_anim"
    android:clickable="true"
    android:focusable="true"
    android:elevation="6dp">

    <!-- ================= ROW 1 : DATE | BAZAR | AMOUNT ================= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:gravity="center_vertical">

        <!-- Date + Bazar -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.rkonline.android.latobold
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Nov 2019"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:alpha="0.85"/>

            <com.rkonline.android.latonormal
                android:id="@+id/bazar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kalyan Open"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Amount -->
        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹10000"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- ================= ROW 2 : BET | GAME TYPE | RESULT ================= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <!-- Bet --><TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bet: "
        android:textColor="@android:color/white"
        android:textSize="13sp"/>
        <TextView
            android:id="@+id/bet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:textColor="@android:color/white"
            android:textSize="13sp"/>

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <!-- Game Type Chip -->
        <TextView
            android:id="@+id/gameType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPEN"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:background="@drawable/bg_badge"/>

        <!-- Small gap -->
        <View
            android:layout_width="6dp"
            android:layout_height="1dp"/>

        <!-- Result Chip -->
        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WON"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
           />
    </LinearLayout>

    <!-- ================= ROW 3 : GAME NAME | TIME | MESSAGE ================= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <!-- Game Name -->
        <TextView
            android:id="@+id/gameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lucky Seven"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <!-- Dot Separator -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" • "
            android:textColor="@android:color/white"
            android:alpha="0.7"/>

        <!-- Played Time -->
        <TextView
            android:id="@+id/playedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:45 PM"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:alpha="0.8"/>

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <!-- Result Message -->
        <TextView
            android:id="@+id/resultMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All the best"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:alpha="0.85"/>
    </LinearLayout>

</LinearLayout>
