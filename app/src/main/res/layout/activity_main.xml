<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MainActivity">

    <!-- ================= TOOLBAR ================= -->
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/background">

        <!-- Back -->
        <androidx.cardview.widget.CardView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_baseline_menu_open_24"
                app:tint="@color/font" />
        </androidx.cardview.widget.CardView>

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_toEndOf="@id/back"
            android:layout_marginStart="5dp"
            android:src="@drawable/splash_logo" />

        <!-- Language -->
        <ImageButton
            android:id="@+id/lang_switch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_baseline_language_24"
            app:tint="@color/primary_dark" />

        <!-- Wallet -->
        <LinearLayout
            android:id="@+id/wallet_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/lang_switch"
            android:layout_marginEnd="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/wallet_out"
            android:padding="10dp"
            android:orientation="horizontal">

            <com.rkonline.android.latobold
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="600"
                android:textColor="#fff"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/coin" />
        </LinearLayout>

    </RelativeLayout>

    <!-- ================= MAIN CONTENT ================= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#11000000" />

        <com.rkonline.android.latonormal
            android:id="@+id/hometext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/playnwin"
            android:textColor="@color/font"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#11000000" />

        <com.rkonline.android.latobold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Market"
            android:textColor="@color/font"
            android:textSize="17sp" />

        <!-- Recycler -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewMarket"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="10dp">

            <!-- EXIT -->
            <androidx.cardview.widget.CardView
                android:id="@+id/exit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                app:cardElevation="3dp" android:layout_height="45dp">

                <com.rkonline.android.latobold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:gravity="center"
                    android:text="EXIT" />
            </androidx.cardview.widget.CardView>

            <!-- LOGOUT -->
            <androidx.cardview.widget.CardView
                android:id="@+id/logout"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                android:layout_marginEnd="5dp"
                app:cardElevation="3dp"
                android:layout_height="45dp">

                <com.rkonline.android.latobold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:gravity="center"
                    android:text="LOGOUT" />
            </androidx.cardview.widget.CardView>

            <!-- REFRESH -->
            <androidx.cardview.widget.CardView
                android:id="@+id/refresh"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                android:layout_marginEnd="5dp"
                app:cardElevation="3dp"
                android:layout_height="45dp">

                <com.rkonline.android.latobold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:gravity="center"
                    android:text="REFRESH" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Support -->
        <androidx.cardview.widget.CardView
            android:id="@+id/support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            app:cardElevation="3dp">

            <com.rkonline.android.latobold
                android:id="@+id/supportno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Contact us"
                android:textSize="15sp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>
